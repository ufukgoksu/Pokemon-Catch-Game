<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#FFAB40"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Pokemon Catch Game"
        app:titleMarginStart="40dp">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="SÃ¼re 10"
            android:textColor="#FFAB40"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/skorText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="Slor 0"
            android:textColor="#FFAB40"
            android:textSize="24sp" />
    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="379dp"
        android:layout_height="362dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.412">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:onClick="say"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/resim1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:onClick="say"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/resim2
" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:onClick="say"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/resim3" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:onClick="say"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/resim4" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:onClick="say"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/resim5" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:onClick="say"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/resim6" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:onClick="say"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/resim7" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:onClick="say"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/resim8" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:onClick="say"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/resim9" />


    </androidx.gridlayout.widget.GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>